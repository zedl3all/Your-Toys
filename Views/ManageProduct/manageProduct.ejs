<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Product</title>
    <link rel="stylesheet" href="/Views/manageProduct/manageProduct.css">
</head>

<body>
    <div class="product-container">
        <h2>Manage Product</h2>
        <div class="add-product-link">
            <a href="/addProduct">Add Product</a>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Size</th>
                    <th>Amount</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example product rows -->
                <tr>
                    <td>Product 1</td>
                    <td>Sample description for product 1</td>
                    <td>$10.00</td>
                    <td>Medium</td>
                    <td>
                        <div class="amount-controls">
                            <button onclick="updateAmount(1, -1)">-</button>
                            <input type="number" id="amount-1" value="50" onchange="updateAmountDirectly(1)">
                            <button onclick="updateAmount(1, 1)">+</button>
                        </div>
                    </td>
                    <td><img src="/path/to/image1.jpg" alt="Product 1" width="50"></td>
                    <td><a href="#" class="edit-link" onclick="openEditModal(1)">Edit</a></td>
                </tr>
                <tr>
                    <td>Product 2</td>
                    <td>Sample description for product 2</td>
                    <td>$20.00</td>
                    <td>Large</td>
                    <td>
                        <div class="amount-controls">
                            <button onclick="updateAmount(2, -1)">-</button>
                            <input type="number" id="amount-2" value="30" onchange="updateAmountDirectly(2)">
                            <button onclick="updateAmount(2, 1)">+</button>
                        </div>
                    </td>
                    <td><img src="/path/to/image2.jpg" alt="Product 2" width="50"></td>
                    <td><a href="#" class="edit-link" onclick="openEditModal(2)">Edit</a></td>
                </tr>
                <!-- Add more product rows as needed -->
            </tbody>
        </table>
    </div>

    <!-- The Modal -->
    <div id="editModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeEditModal()">&times;</span>
            <h2>Edit Product</h2>
            <form id="editForm">
                <div class="form-group">
                    <label for="editProductName">Product Name:</label>
                    <input type="text" id="editProductName" name="productName" required>
                </div>
                <div class="form-group">
                    <label for="editDescription">Description:</label>
                    <textarea id="editDescription" name="description" rows="4" required></textarea>
                </div>
                <div class="form-group">
                    <label for="editPrice">Price:</label>
                    <input type="number" id="editPrice" name="price" step="0.01" required>
                </div>
                <div class="form-group">
                    <label for="editSize">Size:</label>
                    <select id="editSize" name="size">
                        <option value="small">Small</option>
                        <option value="medium">Medium</option>
                        <option value="large">Large</option>
                        <option value="etc">Etc.</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="editAmount">Amount:</label>
                    <input type="number" id="editAmount" name="amount" required>
                </div>
                <div class="form-group">
                    <label for="editImage">Upload Image:</label>
                    <input type="file" id="editImage" name="image" accept="image/*">
                </div>
                <button type="submit">Save Changes</button>
            </form>
        </div>
    </div>

    <script src="/Views/manageProduct/manageProduct.js"></script>
</body>

</html>