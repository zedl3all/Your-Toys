<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .product-container {
            display: flex;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        .product-gallery img {
            width: 300px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .product-details {
            margin-left: 20px;
        }

        .product-details h1 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .must-have {
            margin-top: 10px;
        }

        button {
            background: #FFC107;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
        }

        button:hover {
            background: #e0a800;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-group input[type="file"] {
            padding: 3px;
        }
    </style>
    <%- include("navbar.ejs") %>
</head>

<body>
    <main>
        <div class="product-container">
            <div class="product-gallery">
                <img src="Asset/Logo.svg" alt="Apple Pencil Pro">
            </div>
            <div class="product-details">
                <h1>Standy</h1>
                <p>Modify</p>
                
                <!-- Detail input field -->
                <div class="form-group">
                    <label for="details">Details:</label>
                    <input type="text" id="details" name="details" placeholder="Enter product details">
                </div>
                
                <!-- Size selector -->
                <div class="form-group">
                    <label for="size">Size:</label>
                    <select id="size" name="size" onchange="toggleCustomSizeInput(this)">
                        <option value="small">Small</option>
                        <option value="medium">Medium</option>
                        <option value="large">Large</option>
                        <option value="etc">Etc.</option>
                    </select>
                </div>
                
                <!-- Custom size input field -->
                <div class="form-group" id="custom-size-group" style="display: none;">
                    <label for="custom-size">Custom Size:</label>
                    <input type="text" id="custom-size" name="custom-size" placeholder="Enter custom size">
                </div>
                
                <!-- Image file input field -->
                <div class="form-group">
                    <label for="image">Upload Image:</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <h3>Price</h3>

                <button>Add to Cart</button>
            </div>
        </div>
    </main>
<script>
    function toggleCustomSizeInput(selectElement) {
        const customSizeGroup = document.getElementById('custom-size-group');
        if (selectElement.value === 'etc') {
            customSizeGroup.style.display = 'block';
        } else {
            customSizeGroup.style.display = 'none';
        }
    }
</script>
</body>

</html>