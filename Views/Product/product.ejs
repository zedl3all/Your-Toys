<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <link rel="stylesheet" href="/Views/product/product.css">
    <%- include("../Template/navbar.ejs") %>
</head>

<body>
    <main>
        <div class="product-container">
            <div class="product-gallery">
                <img src="Asset/Logo.svg" alt="Apple Pencil Pro">
            </div>
            <div class="product-details">
                <h1>Standy</h1>
                <p>Modify</p>
                
                <!-- Detail input field -->
                <div class="form-group">
                    <label for="details">Description:</label>
                    <input type="text" id="details" name="details" placeholder="Enter product description">
                </div>
                
                <!-- Size selector -->
                <div class="form-group">
                    <label for="size">Size:</label>
                    <select id="size" name="size" onchange="toggleCustomSizeInput(this)">
                        <option value="small">Small</option>
                        <option value="medium">Medium</option>
                        <option value="large">Large</option>
                        <option value="etc">Etc.</option>
                    </select>
                </div>
                
                <!-- Custom size input field -->
                <div class="form-group" id="custom-size-group" style="display: none;">
                    <label for="custom-size">Custom Size:</label>
                    <input type="text" id="custom-size" name="custom-size" placeholder="Enter custom size">
                </div>
                
                <!-- Image file input field -->
                <div class="form-group">
                    <label for="image">Upload Image:</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <h3>Price</h3>

                <button>Add to Cart</button>
            </div>
        </div>
    </main>
    <script src="/Views/product/product.js"></script>
</body>

</html>